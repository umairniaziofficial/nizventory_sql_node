<% products.forEach(product => { %>
    <div class="w-full productItem" data-product-name="<%= product.pname %>">
        <div class="w-[90%] mx-auto rounded-lg bg-[#1e1f23] text-[#adadad] flex mt-12 text-center h-12 items-center shadow-lg hover:contrast-125 transition ease-in-out duration-300 cursor-pointer">
            <img src="data:image/jpeg;base64, <%= product.image %>" alt="<%= product.pname %> Image" class="w-[18%] h-2/3" />
            <h5 class="w-[18%]"><%= product.pid %></h5>
            <h5 class="w-[18%]"><%= product.pname %></h5>
            <h5 class="w-[18%]"><%= product.p_stock %></h5>
            <h5 class="w-[18%]"><%= product.sid %></h5>
            <div class="w-[18%] flex justify-center items-center gap-2">
                <form action="/edit">
                    <button class="bg-[#33E67A] font-bold rounded-lg text-black px-3 text-xs py-1">
                        Edit
                    </button>
                </form>
                <form action="/delete">
                    <button class="bg-[#33E67A] font-bold rounded-lg text-black px-3 text-xs py-1">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
<% }); %>