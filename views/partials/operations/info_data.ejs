<% products.forEach(item => { %>
    <div class="w-full">
        <div class="w-full mx-auto rounded-lg bg-[#1e1f23] text-[#adadad] flex mt-4 text-center h-16 items-center shadow-lg hover:contrast-125 transition ease-in-out duration-300 cursor-pointer ">
           <% if (pageTitle.toLowerCase() === "brand") { %>
                <h5 class="w-1/3"><%= item.bid %></h5>
                <h5 class="w-1/3"><%= item.bname %></h5>
           <% } else if (pageTitle.toLowerCase() === "category") { %>
                <h5 class="w-1/3"><%= item.cid %></h5>
                <h5 class="w-1/3"><%= item.category_name %></h5>
           <% } else if (pageTitle.toLowerCase() === "store") { %>
                <h5 class="w-1/4 text-xs"><%= item.sid %></h5>
                <h5 class="w-1/4 text-xs"><%= item.sname %></h5>
                <h5 class="w-1/4 text-xs"><%= item.address %></h5>
                <h5 class="w-1/4 text-xs"><%= item.mobno %></h5>
           <% } %>
           <div class="w-1/4 flex justify-center items-center gap-2">
                <form action="/edit/<%= pageTitle.toLowerCase() === 'brand' ? 'brand/' + item.bid : pageTitle.toLowerCase() === 'category' ? 'category/' + item.cid : 'store/' + item.sid %>" method="get">
                    <button class="bg-[#33E67A] font-bold rounded-lg text-black px-3 text-xs py-1">
                        Edit
                    </button>
                </form>
                <form action="/delete/<%= pageTitle.toLowerCase() === 'brand' ? 'brand/' + item.bid : pageTitle.toLowerCase() === 'category' ? 'category/' + item.cid : 'store/' + item.sid %>" method="post">
                    <button class="bg-[#33E67A] font-bold rounded-lg text-black px-3 text-xs py-1">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
<% }); %>
