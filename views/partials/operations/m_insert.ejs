<div class="min-h-screen flex justify-center items-center">
    <div class="p-8 rounded-lg shadow-lg flex flex-col justify-center items-center">
        <h1 class="text-5xl text-white mb-8">Add <%= pageTitle %></h1>
        <form action="/<%= pageTitle.toLowerCase() %>" method="POST" enctype="multipart/form-data" class="space-y-4 w-full max-w-md">
            <% if (pageTitle.toLowerCase() === "category" || pageTitle.toLowerCase() === "brand") { %>
                <div>
                    <label for="pname" class="text-white mb-2">Enter new <%= pageTitle %> name here:</label>
                    <input type="text" id="pname" name="pname" required
                      class="mt-3 px-3 py-2 bg-[#41444d] text-white rounded-lg w-full outline-none" />
                </div>
            <% } else { %>
                <div>
                    <label for="name" class="text-white">Enter new <%= pageTitle %> name here:</label>
                    <input type="text" id="sname" name="sname" required
                      class="mt-1 px-3 py-2 bg-[#41444d] text-white rounded-lg w-full outline-none" />
                </div>
                <div>
                    <label for="name" class="text-white">Enter <%= pageTitle %> Address: </label>
                    <input type="text" id="saddress" name="saddress" required
                      class="mt-1 px-3 py-2 bg-[#41444d] text-white rounded-lg w-full outline-none" />
                </div>
                <div>
                    <label for="name" class="text-white">Enter <%= pageTitle %> phone number:</label>
                    <input type="number" id="snumber" name="snumber" required
                      class="mt-1 px-3 py-2 bg-[#41444d] text-white rounded-lg w-full outline-none" />
                </div>
            <% } %>
            <button type="submit" class="bg-[#33e67a] hover:bg-[#30995a] text-black font-bold py-2 px-4 rounded w-full">
                Submit
            </button>
        </form>
            <% if (pageTitle.toLowerCase() === "category" || pageTitle.toLowerCase() === "brand") { %>
                <%- include('./info_headers.ejs', { heading: [`${pageTitle} ID`, `${pageTitle} Name`, "Action"] }) %>
                <%- include('./info_data.ejs', { products: TheData, pageTitle: pageTitle }) %>
            <% } %>
       
    </div>
</div>
